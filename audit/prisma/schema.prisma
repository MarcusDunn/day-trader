// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://admin:postgrespw@localhost:5432/devdb?schema=public"
}

model Log {
  id            Int      @id @default(autoincrement())
  datetime      DateTime @default(now())
  action        String
  user          String
  stock         String
  amount        Float?
  shareprice    Float?
  shares_bought Int?
}

model UserCommand {
  transactionNum Int    @id @default(autoincrement())
  timestamp      Int
  server         String
  command        String
  username       String
  funds          Int
}
