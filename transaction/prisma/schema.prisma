// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://admin:postgrespw@postgres:5432/devdb?schema=public"
}

model User {
  username       String           @id
  role           String           @default("user")
  balance        Float            @default(0.0)
  BuyTrigger     BuyTrigger[]
  SellTrigger    SellTrigger[]
  OwnedStock     OwnedStock[]
  UncommitedBuy  UncommitedBuy[]
  UncommitedSell UncommitedSell[]
}

model OwnedStock {
  id       Int    @id @default(autoincrement())
  user     User   @relation(fields: [username], references: [username])
  username String
  stock    String
  shares   Float

  @@unique([username, stock])
}

model UncommitedBuy {
  user      User     @relation(fields: [username], references: [username])
  username  String   @id
  stock     String
  amount    Float
  shares    Float
  expiresAt DateTime @default(dbgenerated("CURRENT_TIMESTAMP + interval '61' second"))
}

model UncommitedSell {
  user      User     @relation(fields: [username], references: [username])
  username  String   @id
  stock     String
  amount    Float
  shares    Float
  expiresAt DateTime @default(dbgenerated("CURRENT_TIMESTAMP + interval '61' second"))
}

model BuyTrigger {
  id            Int    @id @default(autoincrement())
  user          User   @relation(fields: [username], references: [username])
  username      String
  stock         String
  triggerAmount Float?
  buyAmount     Float

  @@unique([username, stock])
}

model SellTrigger {
  id            Int    @id @default(autoincrement())
  user          User   @relation(fields: [username], references: [username])
  username      String
  stock         String
  triggerAmount Float?
  sharesToSell  Float

  @@unique([username, stock])
}
